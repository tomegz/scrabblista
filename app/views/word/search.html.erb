<div class="search-header">
  <div class="container">
    <p>Znaleziono <%= @words.size %> słow, które można ułożyć z liter: <%= @rack.input.chars.sort.join(", ") %> </p>
    <div class="col-md-6 col-md-offset-3">
      <p>Sortuj słowa:</p>
      <%= link_to "Najdłuższe", "#", id: "length", class: "active" %>
      <%= link_to "Najlepiej punktowane", "#", id: "points" %>
    </div>
  </div>
</div>
<div class="sortable">
  <div class="container">
    <% @words.each do |word| %>
      <div class="col-md-4 word-column">
        <div class="word-pill">
          <p><%= link_to "#{word.content} ", "http://sjp.pl/#{word.content}", target: "_blank", class: "content" %>
          <%= link_to "(#{word.points})", "http://sjp.pl/#{word.content}", target: "_blank", class: "points" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
