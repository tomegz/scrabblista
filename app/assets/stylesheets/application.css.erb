.logo a {
	text-decoration: none;
	color: #fff;
}
h1, h2 {
	text-align: center;
	color: #fff;
}
 h1 {
 	font-family: "Times New Roman", sans-serif;
 	font-weight: 700;
 	font-size: 70px;
 }

 .search-form-head {
 	color: #fff;
 	display: block;
 	text-align: center;
 }
 .search-form-tab { 
 	display: block; 
 	width: 100%;
 }
 .search-form-btn { 
 	display: block; 
 	width: 100%;
 }

.search-header {
	text-align: center;
	color: #fff;
}
.word-pill {
	cursor: pointer;
	border: 2px solid #000;
	border-radius: 5px;
	background-color: rgba(50,50,50, 0.5);
	margin-bottom: 10px;
	text-align: center;
	padding-top: 3px;
	text-transform: uppercase;
}
.word-pill:hover {
	background-color: rgb(50,50,50);
}
.word-pill a {
	text-decoration: none;
	color: #FFF;
}
.word-pill p {
	font-family: Arial, serif;
	font-weight: 700;
}
@media (max-width: 600px) {
   h1{
    font-size: 40px;
  }
}
  