body { 
  background: url('<%= asset_path("scrabble2.jpg") %> ') no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.logo a {
	text-decoration: none;
	color: #fff;
}
 h1, h2 {
 	text-align: center;
 	color: #fff;
 }
 .search-form-head {
 	color: #fff;
 	display: block;
 	text-align: center;
 }
 .search-form-tab { 
 	display: block; 
 	width: 100%;
 }
 .search-form-btn { 
 	display: block; 
 	width: 100%;
 }

.search-header {
	text-align: center;
	color: #fff;
}
.word-pill {
	border: 2px solid #000;
	border-radius: 5px;
	background-color: rgba(50,50,50, 0.5);
	margin-bottom: 10px;
	text-align: center;
	padding-top: 3px;
	text-transform: uppercase;
}
.word-pill a {
	text-decoration: none;
	color: #FFF;
}
